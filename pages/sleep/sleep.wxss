/* pages/sleep/sleep.wxss */

/* tab页 */

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
}

.titleTab {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 88rpx;
  background: white;
  display: flex;
  align-items: center;
  z-index: 9;
  justify-content: space-around;
  border-bottom: 1rpx solid #858fab;
}

.titleSel {
  color: #5f6fee;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.titleUnsel {
  color: #858fab;
  font-size: #858fab;
}

.headerLineSel {
  background: #5f6fee;
  height: 6rpx;
  width: 100%;
  position: relative;
  margin-top: 16rpx;
}

.headerLineUnsel {
  background: #fff;
  height: 6rpx;
  width: 100%;
  position: relative;
  margin-top: 16rpx;
}

.titleSelect {
  color: #5f6fee;
  margin-top: 20rpx;
}

.titleNoSelect {
  color: #858fab;
  margin-top: 20rpx;
}

.swiper {
  width: 100%;
  flex: 1;
  height: 100vh;
  overflow: scroll;
}

.recordItem {
  margin-top: 10rpx;
  background-color: white;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}


.joke {
  padding: 10rpx;
  margin-top: 90rpx;
}

/* 单个joke */
.info_body {
  position: relative;
}

/* 头像 */
.headPortrait {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}

/* 昵称 */
.name {
  position: absolute;
  top: 20rpx;
  left: 100rpx;
}

/* 时间 */
.passtime {
  position: absolute;
  top: 10rpx;
  right: 20rpx;
  font-weight: lighter;
  font-size: small;
}

/* 主内容 */
.title {
  margin: 20rpx;
}

/* 图片 */
.contentImg {
  width: 100%;
  margin-top: 30rpx;
}

/* 视频 */
.contentVideo {
  width: 100%;
}